#!/bin/bash

if [ git clone git@github.com:jhessin/dotfiles.git --mirror ~/.git ]; then
	cd ~
	git remote update
	git init
	git reset --hard
fi

if [ git clone git@github.com:jhessin/.config --mirror ~/.config/.git ]; then
	cd ~/.config
	git remote update
	git init
	git reset --hard
fi

git clone git@github.com:jhessin/bin ~/.local/bin
